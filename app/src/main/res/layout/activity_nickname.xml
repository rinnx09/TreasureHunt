<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NicknameActivity">

    <TextView
        android:id="@+id/textViewSelectAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/select_avatar" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="101dp"
        android:layout_height="101dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_girl_1" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="101dp"
        android:layout_height="101dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="220dp"
        android:src="@drawable/ic_girl_2" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="101dp"
        android:layout_height="101dp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="80dp"
        android:src="@drawable/ic_boy_1" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="101dp"
        android:layout_height="101dp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="220dp"
        android:src="@drawable/ic_boy_2" />

    <TextView
        android:id="@+id/textViewEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:layout_centerHorizontal="true"
        android:text="@string/enter_nickname" />

    <EditText
        android:id="@+id/editTextNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:layout_centerHorizontal="true"
        android:hint="@string/hint" />

    <Button
        android:id="@+id/buttonGO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:text="@string/go" />

</RelativeLayout>